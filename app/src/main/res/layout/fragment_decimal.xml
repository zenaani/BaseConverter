<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ivDOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_number"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/ivDTwo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ivDTwo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_number"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/ivDThree"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDOne" />

    <Button
        android:id="@+id/ivDThree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/btn_number"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/ivDZero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDTwo" />

    <Button
        android:id="@+id/ivDZero"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/btn_number"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivDThree" />

    <Button
        android:id="@+id/ivDFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDOne"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDOne"
        app:layout_constraintStart_toStartOf="@+id/ivDOne" />

    <Button
        android:id="@+id/ivDFive"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDTwo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDTwo"
        app:layout_constraintStart_toStartOf="@+id/ivDTwo" />

    <Button
        android:id="@+id/ivDSix"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="6"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDThree"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDThree"
        app:layout_constraintStart_toStartOf="@+id/ivDThree" />

    <Button
        android:id="@+id/ivDSeven"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDFour"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDFour"
        app:layout_constraintStart_toStartOf="@id/ivDFour" />

    <Button
        android:id="@+id/ivDEight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDFive"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDFive"
        app:layout_constraintStart_toStartOf="@+id/ivDFive" />

    <Button
        android:id="@+id/ivDNine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivDSix"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivDSix"
        app:layout_constraintStart_toStartOf="@+id/ivDSix" />

    <Button
        android:id="@+id/ivDEqualTo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="="
        android:textSize="24sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/ivDZero"
        app:layout_constraintEnd_toEndOf="@+id/ivDZero"
        app:layout_constraintStart_toStartOf="@+id/ivDZero" />

    <Button
        android:id="@+id/ivDClear"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/btn_number"
        android:text="CLR"
        android:textSize="12sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/ivDEqualTo"
        app:layout_constraintEnd_toEndOf="@+id/ivDEqualTo"
        app:layout_constraintStart_toStartOf="@+id/ivDEqualTo" />

</androidx.constraintlayout.widget.ConstraintLayout>